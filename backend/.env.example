# ────────────────────────────────────────
# Popular Food Shop — Environment Variables
# ────────────────────────────────────────

# Application
APP_NAME=PopularFoodShop
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-secret-key-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/popularfoodshop
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=change-me-jwt-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Storage (S3 / Cloudflare R2)
S3_BUCKET_NAME=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT_URL=
S3_PUBLIC_URL=

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@popularfoodshop.com
SMTP_FROM_NAME=Popular Food Shop

# Payment - ECPay
ECPAY_MERCHANT_ID=
ECPAY_HASH_KEY=
ECPAY_HASH_IV=
ECPAY_PAYMENT_URL=https://payment-stage.ecpay.com.tw/Cashier/AioCheckOut/V5
ECPAY_RETURN_URL=http://localhost:8000/api/v1/payments/callback

# Business Rules
FREE_SHIPPING_THRESHOLD=1500
POINTS_EARN_RATE=0.01
REGISTER_BONUS_POINTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50
